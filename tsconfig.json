{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "typeRoots": ["node_modules/@types", "./@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
